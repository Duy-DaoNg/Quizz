    <script>
        // Offline Quiz Logic with multilingual support
        let quizData;
        let currentQuestionIndex = 0;
        let currentScore = 0;
        let questionTimer = null;
        let answers = [];
        let startTime = Date.now();
        let isAnswering = false;
        let autoAdvanceTimer = null;
        let hasSubmittedAnswer = false;
        let selectedTimeRemaining = 0;
        let isSubmitedTest = false;
        let testTimer = null;
        let testTimeRemaining = 0;

        document.addEventListener('DOMContentLoaded', function() {
            quizData = JSON.parse(document.getElementById('quiz-data').textContent);
            // Set up test duration timer
            testTimeRemaining = (quizData.quiz.testDuration || 30) * 60; // Convert minutes to seconds
            startTestTimer();
            // Initialize question navigation
            initQuestionNav();
            // Start with first question
            showQuestion(0);
        });

        function initQuestionNav() {
            const nav = document.getElementById('questionNav');
            nav.innerHTML = quizData.quiz.questions.map((q, index) => `
                <div class="question-nav-item" 
                     id="nav-q${index}" 
                     onclick="showQuestion(${index})"
                     data-question="${index + 1}">
                    ${index + 1}
                </div>
            `).join('');
            updateQuestionNav();
        }

        function updateQuestionNav() {
            // Remove all special classes first
            document.querySelectorAll('.question-nav-item').forEach(item => {
                item.classList.remove('current', 'answered');
            });

            // Mark current question
            const currentNav = document.getElementById(`nav-q${currentQuestionIndex}`);
            if (currentNav) {
                currentNav.classList.add('current');
            }

            // Mark answered questions
            answers.forEach(answer => {
                if (answer.selectedAnswer) {
                    const navItem = document.getElementById(`nav-q${answer.questionNumber}`);
                    if (navItem) {
                        navItem.classList.add('answered');
                    }
                }
            });
        }

        function startTestTimer() {
            updateTestTimerDisplay();
            testTimer = setInterval(() => {
                testTimeRemaining--;
                updateTestTimerDisplay();
                
                if (testTimeRemaining <= 0) {
                    clearInterval(testTimer);
                    completeTest();
                }
            }, 1000);
        }
        async function completeTest() {
            if (isSubmitedTest) return; // Prevent multiple submissions
            
            isSubmitedTest = true;
            clearInterval(testTimer);

            try {
                // Submit test completion to server
                const response = await fetch('/test/complete-offline-test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        testCode: quizData.testCode,
                        participantName: quizData.participantName,
                        timeRemaining: testTimeRemaining,
                        answers: answers
                    })
                });

                const result = await response.json();

                if (!result.success) {
                    throw new Error(result.message);
                }
                document.querySelector('.quiz-sidebar').style.display = 'none';
                // Hide quiz content and show completion summary
                document.getElementById('quizContent').style.display = 'none';
                document.getElementById('completionSummary').style.display = 'block';
                
                // Update summary with server response data
                document.getElementById('finalScore').textContent = result.results.participant.score;
                document.getElementById('correctAnswers').textContent = result.results.participant.correctAnswers;
                document.getElementById('totalTime').textContent = formatTime(Math.floor((Date.now() - startTime) / 1000));
                
                // Show completion message
                Swal.fire({
                    title: window.translations.testCompleted || 'Test Completed',
                    text: window.translations.thankYou || 'Thank you for completing the test!',
                    icon: 'success',
                    confirmButtonText: window.translations.viewResults || 'View Results'
                });

            } catch (error) {
                console.error('Complete test error:', error);
                isSubmitedTest = false; // Allow retry
                Swal.fire({
                    title: 'Error',
                    text: error.message || 'Failed to submit test',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        }
        function formatTime(totalSeconds) {
            const hours = Math.floor(totalSeconds / 3600);
            const minutes = Math.floor((totalSeconds % 3600) / 60);
            const seconds = totalSeconds % 60;
            
            return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        function updateTestTimerDisplay() {
            const hours = Math.floor(testTimeRemaining / 3600);
            const minutes = Math.floor((testTimeRemaining % 3600) / 60);
            const seconds = testTimeRemaining % 60;
            
            document.getElementById('testTimerHours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('testTimerMinutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('testTimerSeconds').textContent = seconds.toString().padStart(2, '0');
        }

        function confirmSubmitTest() {
            Swal.fire({
                title: window.translations.confirmSubmit || 'Submit Test?',
                text: window.translations.confirmSubmitMessage || 'Are you sure you want to submit your test? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: window.translations.submit || 'Submit',
                cancelButtonText: window.translations.cancel || 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    completeTest();
                }
            });
        }

        // Update existing functions
        function showQuestion(questionIndex) {
            // Remove timer-related code
            currentQuestionIndex = questionIndex;
            const question = quizData.quiz.questions[questionIndex];
            displayQuestion(question);
            updateQuestionNav();
        }
        function displayQuestion(question) {
            const container = document.getElementById('previewQuestionContainer');
            
            // Find existing answer for this question
            const existingAnswer = answers.find(a => a.questionNumber === currentQuestionIndex);
            
            let questionHTML = `
                <div class="question-display-container">
                    <div class="preview-question-header">
                        <div class="preview-question-number">${currentQuestionIndex + 1}</div>
                        <div class="preview-question-content">
                            <h5 class="preview-question-title">${question.content}</h5>
                        </div>
                    </div>
            `;
            
            if (question.image) {
                questionHTML += `
                    <div class="preview-question-image">
                        <img src="${question.image}" alt="Question Image">
                    </div>
                `;
            }
            
            questionHTML += '<div class="preview-options">';
            question.options.forEach(option => {
                if (option.text && option.text.trim()) {
                    const colorClass = `letter-${option.letter.toLowerCase()}`;
                    const isSelected = existingAnswer && existingAnswer.selectedAnswer === option.letter;
                    const selectedClasses = isSelected ? 'selected pulse-selection' : '';
                    
                    questionHTML += `
                        <div class="preview-option ${selectedClasses}" 
                            data-letter="${option.letter}" 
                            onclick="selectAnswer('${option.letter}')">
                            <div class="preview-option-content">
                                <div class="preview-option-letter ${colorClass}">${option.letter}</div>
                                <div class="preview-option-text">${option.text}</div>
                                <div class="preview-option-status"></div>
                            </div>
                        </div>
                    `;
                }
            });
            questionHTML += '</div></div>';
            
            container.innerHTML = questionHTML;
            
            // Apply option colors
            setTimeout(() => {
                if (typeof applyOptionColors === 'function') {
                    applyOptionColors();
                }
            }, 100);
        }
        function selectAnswer(letter) {
            // if (hasSubmittedAnswer) return;
            
            // Remove classes from previously selected option if exists
            const previousAnswer = answers.find(a => a.questionNumber === currentQuestionIndex);
            if (previousAnswer) {
                const previousOption = document.querySelector(`.preview-option[data-letter="${previousAnswer.selectedAnswer}"]`);
                if (previousOption) {
                    previousOption.classList.remove('selected', 'pulse-selection');
                }
            }
            
            // Add classes to newly selected option
            const selectedOption = document.querySelector(`.preview-option[data-letter="${letter}"]`);
            if (selectedOption) {
                selectedOption.classList.add('selected', 'pulse-selection');
            }
            
            selectedAnswer = letter;
            // hasSubmittedAnswer = true;
            
            // Update answers array
            const answerData = {
                questionNumber: currentQuestionIndex,
                selectedAnswer: letter,
                correctAnswer: quizData.quiz.questions[currentQuestionIndex].correctAnswer,
                isCorrect: letter === quizData.quiz.questions[currentQuestionIndex].correctAnswer,
                points: letter === quizData.quiz.questions[currentQuestionIndex].correctAnswer ? 10 : 0
            };

            const existingAnswerIndex = answers.findIndex(a => a.questionNumber === currentQuestionIndex);
            if (existingAnswerIndex >= 0) {
                answers[existingAnswerIndex] = answerData;
            } else {
                answers.push(answerData);
            }
            
            // Update UI
            // showAnswerFeedback(letter, answerData.isCorrect);
            updateQuestionNav();
            // submitAnswerToServer(letter);
        }

        // Remove or comment out unused timer functions
        // function startQuestionTimer() {...}
        // function handleTimeUp() {...}
        // function showAutoAdvanceNotice() {...}
    </script>

