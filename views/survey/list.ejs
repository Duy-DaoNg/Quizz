    <!-- Room Management Scripts -->
    <script>
        // Function to switch department
        function switchDepartment() {
            Swal.fire({
                title: window.translations.switchDepartmentConfirm,
                text: window.translations.switchDepartmentText,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#667eea',
                cancelButtonColor: '#64748b',
                confirmButtonText: window.translations.yesSwitchBtn,
                cancelButtonText: window.translations.cancelBtn
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/auth/api/admin/switch-room', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = data.redirectUrl;
                        } else {
                            throw new Error(data.message);
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            icon: 'error',
                            title: window.translations.errorTitle,
                            text: window.translations.errorSwitchDepartment,
                            confirmButtonColor: '#667eea'
                        });
                    });
                }
            });
        }

        // Add room info to existing functions
        const originalRefreshSurveys = window.refreshSurveys;
        window.refreshSurveys = function() {
            showLoadingState(true);
            
            // Show room info in loading message
            const roomInfo = '<%= typeof roomInfo !== "undefined" && roomInfo ? roomInfo.name : "" %>';
            if (roomInfo) {
                document.querySelector('#loadingState p').textContent = window.translations.loadingSurveys.replace('surveys', roomInfo + ' surveys');
            }
            
            setTimeout(() => {
                showLoadingState(false);
                showNotification(window.translations.surveysRefreshed, 'success');

                // Re-animate cards
                document.querySelectorAll('.quiz-card').forEach((card, index) => {
                    card.style.animation = `fadeInUp 0.6s ease-out ${index * 0.1}s both`;
                });
            }, 1500);
        };

        // Override delete survey function with translations
        window.deleteSurvey = async function(quizId) {
            try {
                const result = await Swal.fire({
                    title: window.translations.deleteSurveyTitle,
                    text: window.translations.deleteSurveyText,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: window.translations.yesDeleteBtn,
                    cancelButtonText: window.translations.cancelBtn,
                    customClass: {
                        popup: 'swal-modern',
                        confirmButton: 'swal-confirm-modern',
                        cancelButton: 'swal-cancel-modern'
                    }
                });

                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: window.translations.deletingSurvey,
                        text: window.translations.pleaseWait,
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-modern'
                        }
                    });

                    const response = await fetch(`/surveys/${quizId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        throw new Error('Failed to delete survey');
                    }

                    // Remove card with animation
                    const surveyCard = document.querySelector(`[data-quiz-id="${quizId}"]`) || 
                                    document.querySelector(`.quiz-card:has(a[href*="${quizId}"])`);

                    if (surveyCard) {
                        surveyCard.style.animation = 'fadeOut 0.5s ease-out';
                        setTimeout(() => {
                            surveyCard.remove();
                            updateSurveyCount();
                            applyFilters(); // Reapply filters to update counts
                        }, 500);
                    }

                    Swal.fire({
                        title: window.translations.surveyDeleted,
                        text: window.translations.surveyDeletedText,
                        icon: 'success',
                        timer: 3000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-modern'
                        }
                    });

                }
            } catch (error) {
                console.error('Delete survey error:', error);
                Swal.fire({
                    title: window.translations.errorTitle,
                    text: window.translations.failedDeleteSurvey,
                    icon: 'error',
                    confirmButtonColor: '#667eea',
                    customClass: {
                        popup: 'swal-modern'
                    }
                });
            }
        };
        window.duplicateSurvey = async function(quizId) {
            try {
                const result = await Swal.fire({
                    title: window.translations.duplicateSurveyTitle || 'Duplicate Survey?',
                    text: window.translations.duplicateSurveyText || 'This will create an exact copy of the survey with a new number.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#667eea',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: window.translations.yesDuplicateBtn || 'Yes, Duplicate',
                    cancelButtonText: window.translations.cancelBtn,
                    customClass: {
                        popup: 'swal-modern',
                        confirmButton: 'swal-confirm-modern',
                        cancelButton: 'swal-cancel-modern'
                    }
                });

                if (!result.isConfirmed) return;

                Swal.fire({
                    title: window.translations.duplicatingSurvey || 'Duplicating Survey...',
                    text: window.translations.pleaseWait || 'Please wait...',
                    icon: 'info',
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    customClass: {
                        popup: 'swal-modern'
                    }
                });

                const response = await fetch(`/surveys/${quizId}/duplicate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) throw new Error('API error');

                Swal.fire({
                    title: window.translations.surveyDuplicated || 'Survey Duplicated!',
                    text: window.translations.surveyDuplicatedText || 'The survey copy has been created successfully.',
                    icon: 'success',
                    timer: 3000,
                    timerProgressBar: true,
                    showConfirmButton: false,
                    customClass: {
                        popup: 'swal-modern'
                    }
                });

                setTimeout(() => {
                    window.location.reload();
                }, 3000);

            } catch (error) {
                console.error('Duplicate survey error:', error);
                Swal.fire({
                    title: window.translations.errorTitle || 'Error!',
                    text: window.translations.failedDuplicateSurvey || 'Failed to duplicate the survey. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#667eea',
                    customClass: {
                        popup: 'swal-modern'
                    }
                });
            }
        }

        // Dropdown fix for room selection
        document.addEventListener('DOMContentLoaded', function() {
            
            if (typeof bootstrap === 'undefined') {
                console.error('Bootstrap JavaScript is not loaded!');
                return;
            }
            
            const dropdownElements = document.querySelectorAll('.dropdown-toggle');
            
            dropdownElements.forEach(function(element) {
                if (!element.hasAttribute('data-bs-toggle')) {
                    element.setAttribute('data-bs-toggle', 'dropdown');
                }
                if (!element.hasAttribute('aria-expanded')) {
                    element.setAttribute('aria-expanded', 'false');
                }
                
                try {
                    new bootstrap.Dropdown(element);
                } catch (error) {
                    console.error('Error initializing dropdown:', error);
                }
            });
        });
    </script>
    <script>
        // Create Test Modal functionality with translations
        document.addEventListener('DOMContentLoaded', function() {
            const createTestModal = new bootstrap.Modal(document.getElementById('createTestModal'));
            const testCreatedModal = new bootstrap.Modal(document.getElementById('testCreatedModal'));
            const createTestForm = document.getElementById('createTestForm');
            const createTestBtn = document.getElementById('createTestBtn');
            
            // Mode change handler
            document.querySelectorAll('input[name="mode"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    const scheduleSettings = document.getElementById('scheduleSettings');
                    const startTimeInput = document.getElementById('startTime');
                    const endTimeInput = document.getElementById('endTime');
                    
                    scheduleSettings.style.display = 'block';
                    startTimeInput.required = true;
                    endTimeInput.required = true;
                    
                    // Set default times (start: now + 1 hour, end: now + 24 hours)
                    const now = new Date();
                    const startTime = new Date(now.getTime() + 60 * 60 * 1000);
                    const endTime = new Date(now.getTime() + 24 * 60 * 60 * 1000);
                    
                    startTimeInput.value = startTime.toISOString().slice(0, 16);
                    endTimeInput.value = endTime.toISOString().slice(0, 16);
                });
            });
            
            // Form submission
            createTestForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const data = {};
                
                for (let [key, value] of formData.entries()) {
                    data[key] = value;
                }
                
                data.scheduleSettings = {
                    startTime: data.startTime,
                    endTime: data.endTime
                };
                delete data.startTime;
                delete data.endTime;

                
                // Show loading state
                createTestBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>' + window.translations.creatingTest;
                createTestBtn.disabled = true;
                
                try {
                    const response = await fetch('/publicsurvey/create', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Hide create modal
                        createTestModal.hide();
                        
                        // Show success modal
                        showTestCreatedModal(result);
                        
                        // Reset form
                        createTestForm.reset();
                        document.getElementById('scheduleSettings').style.display = 'none';
                    } else {
                        throw new Error(result.message);
                    }
                    
                } catch (error) {
                    console.error('Create survey error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: window.translations.errorCreatingSurvey,
                        text: error.message,
                        confirmButtonColor: '#667eea'
                    });
                } finally {
                    // Reset button
                    createTestBtn.innerHTML = '<i class="fas fa-rocket me-2"></i>' + window.translations.createTest;
                    createTestBtn.disabled = false;
                }
            });
            
            function showTestCreatedModal(result) {
                const { test, joinLink, qrCode } = result;
                const contentDiv = document.getElementById('testCreatedContent');
                const startTestBtn = document.getElementById('startTestBtn');
                
                let scheduleInfo = '';
                const startTime = new Date(test.scheduleSettings.startTime);
                const endTime = new Date(test.scheduleSettings.endTime);
                scheduleInfo = `
                    <div class="alert alert-info">
                        <i class="fas fa-clock me-2"></i>
                        <strong>${window.translations.schedule}:</strong> ${startTime.toLocaleString()} - ${endTime.toLocaleString()}
                    </div>
                `;
                
                contentDiv.innerHTML = `
                    <div class="text-center mb-4">
                        <div class="badge bg-success fs-6 mb-3">
                            ${window.translations.testCode}: <strong>${test.testCode}</strong>
                        </div>
                        <h6>Survey #${test.quizNumber}: ${test.quizTitle}</h6>
                        <p class="text-muted">${window.translations.maxParticipants}: ${test.maxParticipants}</p>
                    </div>
                    
                    ${scheduleInfo}
                    
                    <div class="row">
                        <div class="col-md-12" style="text-align: center;">
                            ${qrCode ? `<img src="${qrCode}" alt="QR Code" class="img-fluid" style="width: 300px;">` : `<p class="text-muted">${window.translations.qrCodeNotAvailable}</p>`}
                        </div>
                        <div class="col-md-12">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" id="joinLinkInput" value="${joinLink}" readonly>
                                <button class="btn btn-outline-primary" onclick="copyJoinLink()">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>${window.translations.instructionsForParticipants}</strong>
                        <ul class="mb-0 mt-2">
                            <li>${window.translations.accessViaLink}</li>
                            <li>${window.translations.enterTestCode}: <strong>${test.testCode}</strong></li>
                            <li>${window.translations.joinAnytimeScheduled}</li>
                        </ul>
                    </div>
                `;
                startTestBtn.style.display = 'none';
                
                testCreatedModal.show();
            }
            
            // Global function for copying join link
            window.copyJoinLink = function() {
                const input = document.getElementById('joinLinkInput');
                input.select();
                document.execCommand('copy');
                
                // Show feedback
                const button = event.target.closest('button');
                const originalContent = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check text-success"></i>';
                
                setTimeout(() => {
                    button.innerHTML = originalContent;
                }, 2000);
                
                showNotification(window.translations.joinLinkCopied, 'success');
            };
            
            // Global function to open create test modal
            window.openCreateTestModal = function() {
                createTestModal.show();
            };
        });
        </script>
