<% layout = false %>
<!DOCTYPE html>
<html lang="<%= lng %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= t('common:app_name') %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="/css/modern_quiz_list.css" rel="stylesheet">
    <link href="/css/quiz_list_number.css" rel="stylesheet">
    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/quizzes">
                <i class="fas fa-brain"></i>
                <%= t('common:app_name') %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Language Switcher -->
                <ul class="navbar-nav me-auto">
                    <!-- Room Selection Info -->
                    <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                    <li class="nav-item dropdown ms-3">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-column">
                                    <span class="fw-medium d-none d-md-inline" style="font-size: 0.9rem;">
                                        <%= roomInfo.name %>
                                    </span>
                                    <span class="fw-medium d-md-none">
                                        <%= roomInfo.code.toUpperCase() %>
                                    </span>
                                </div>
                            </div>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <h6 class="dropdown-header">
                                    <i class="fas fa-building me-2"></i>
                                    <%= t('survey:current_department') %>
                                </h6>
                            </li>
                            <li>
                                <span class="dropdown-item-text">
                                    <strong><%= roomInfo.name %></strong><br>
                                    <small class="text-muted"><%= t('survey:code') %>: <%= roomInfo.code.toUpperCase() %></small>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="switchDepartment()">
                                    <i class="fas fa-exchange-alt me-2"></i><%= t('survey:switch_department') %>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/quizzes">
                            <i class="fas fa-brain me-2"></i>
                            <%= t('common:manage_quiz') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/surveys">
                            <i class="fas fa-clipboard-list me-2"></i>
                            <%= t('common:manage_survey') %>
                        </a>
                    </li>
                </ul>
                
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" 
                           href="#" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false"
                           id="navbarDropdown">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-white bg-opacity-20 p-2 me-2" style="position: relative;">
                                    <img src="https://jbagy.me/wp-content/uploads/2025/03/anh-dai-dien-zalo-dep-1.jpg" alt="User" class="rounded-circle align-avatar-image" style="object-fit: cover;">
                                </div>
                                <span class="fw-medium d-none d-sm-inline">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <%= user.name || t('survey:admin') %>
                                    <% } else { %>
                                        <%= t('survey:admin') %>
                                    <% } %>
                                </span>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                            <li>
                                <h6 class="dropdown-header">
                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <i class="fas fa-envelope me-2"></i>
                                        <%= user.email %>
                                    <% } %>
                                </h6>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i><%= t('common:profile') %></a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i><%= t('common:settings') %></a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i><%= t('common:logout') %></a></li>
                        </ul>
                    </div>
                </div>
                <div class="language-switcher-container" style="text-align: end;">
                    <%- include('../partials/language-switcher') %>
                </div>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="header-content">
                            <h1 class="page-title">
                                <i class="fas fa-clipboard-list me-3"></i>
                                <%= t('survey:management') %>
                                <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                                <small class="text-white-50 d-block mt-2" style="font-size: 1.2rem; font-weight: 500;">
                                    <i class="fas 
                                        <%= roomInfo.roomCode === 'hrm' ? 'fa-users' :
                                            roomInfo.roomCode === 'hse' ? 'fa-shield-alt' :
                                            roomInfo.roomCode === 'qaqs' ? 'fa-clipboard-check' :
                                            roomInfo.roomCode === 'sm' ? 'fa-crown' :
                                            roomInfo.roomCode === 'gm' ? 'fa-briefcase' :
                                            roomInfo.roomCode === 'fol' ? 'fa-industry' :
                                            roomInfo.roomCode === 'eol' ? 'fa-cogs' :
                                            roomInfo.roomCode === 'it' ? 'fa-laptop-code' :
                                            roomInfo.roomCode === 'mkt' ? 'fa-bullhorn' :
                                            roomInfo.roomCode === 'eng' ? 'fa-tools' :
                                            roomInfo.roomCode === 'wh' ? 'fa-warehouse' :
                                            roomInfo.roomCode === 'log' ? 'fa-shipping-fast' :
                                            roomInfo.roomCode === 'pnp' ? 'fa-project-diagram' :
                                            roomInfo.roomCode === 'acc' ? 'fa-file-invoice-dollar' :
                                            'fa-question-circle' %> me-2">
                                    </i>
                                    <%= roomInfo.name %> <%= t('survey:department') %>
                                </small>
                                <% } %>
                            </h1>
                        </div>
                    </div>
                    <div class="col-lg-12 text-lg-start">
                        <div class="header-actions">
                            <a href="/surveys/create" class="btn btn-primary-custom me-2" style="margin-top: 10px;">
                                <i class="fas fa-plus me-2"></i>
                                <%= t('survey:create_new') %>
                            </a>
                            <button class="btn btn-warning-custom me-2" onclick="openCreateTestModal()" style="margin-top: 10px;">
                                <i class="fas fa-rocket me-2"></i>
                                <%= t('publicsurvey:create_publicsurvey') %>
                            </button>
                            <a href="/publicsurvey/admin/results" class="btn btn-result-custom me-2" style="margin-top: 10px; margin-right: 0 !important;">
                                <i class="fas fa-chart-bar me-2"></i>
                                <%= t('publicsurvey:publicsurvey_results') %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <div class="container">
                <div class="filter-card">
                    <div class="filter-header">
                        <h5 class="filter-title">
                            <i class="fas fa-filter me-2"></i>
                            <%= t('survey:filter_and_search') %>
                            <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            <small class="text-muted">(<%= roomInfo.code.toUpperCase() %> <%= t('survey:department') %>)</small>
                            <% } %>
                        </h5>
                        <button class="btn btn-sm btn-outline-secondary" onclick="clearFilters()">
                            <i class="fas fa-times me-1"></i>
                            <%= t('survey:clear_all') %>
                        </button>
                    </div>
                    <div class="filter-body">
                        <div class="row g-3">
                            <div class="col-lg-4 col-md-6">
                                <div class="search-wrapper">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" class="form-control search-input" id="searchQuiz" 
                                           placeholder="<%= t('survey:search_placeholder') %>">
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <select class="form-select filter-select" id="filterMode" disabled>
                                    <option value=""><%= t('survey:all_modes') %></option>
                                    <option value="online"><%= t('survey:online') %></option>
                                    <option value="offline"><%= t('survey:offline') %></option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <select class="form-select filter-select" id="filterLanguage" disabled>
                                    <option value=""><%= t('survey:all_languages') %></option>
                                    <option value="vietnamese"><%= t('survey:vietnamese') %></option>
                                    <option value="english"><%= t('survey:english') %></option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <select class="form-select filter-select" id="sortBy">
                                    <option value="newest"><%= t('survey:newest_first') %></option>
                                    <option value="oldest"><%= t('survey:oldest_first') %></option>
                                    <option value="name"><%= t('survey:name_a_z') %></option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6 col-sm-6">
                                <div class="view-toggle">
                                    <button class="view-btn active" data-view="grid" title="<%= t('survey:grid_view') %>" disabled>
                                        <i class="fas fa-th"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quizzes Section -->
        <div class="quizzes-section">
            <div class="container">
                <!-- Loading State -->
                <div id="loadingState" class="loading-state" style="display: none;">
                    <div class="loading-spinner">
                        <i class="fas fa-spinner fa-spin"></i>
                    </div>
                    <p><%= t('survey:loading_surveys') %></p>
                </div>

                <!-- Empty State -->
                <% if (quizzes.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3><%= t('survey:no_surveys_yet') %></h3>
                    <p>
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                            <%= ti('survey:get_started_department', { department: roomInfo.name }) %>
                        <% } else { %>
                            <%= t('survey:get_started_general') %>
                        <% } %>
                    </p>
                    <a href="/surveys/create" class="btn btn-primary-custom">
                        <i class="fas fa-plus me-2"></i>
                        <%= t('survey:create_first_survey') %>
                    </a>
                </div>
                <% } else { %>

                <!-- Quiz Grid -->
                <div class="quiz-grid" id="quizGrid">
                    <% quizzes.forEach((quiz, index) => { %>
                    <div class="quiz-card" 
                         data-mode="<%= quiz.mode %>" 
                         data-language="<%= quiz.language %>"
                         data-title="<%= quiz.title.toLowerCase() %>"
                         data-number="<%= quiz.number || index + 1 %>"
                         data-date="<%= quiz.updatedAt %>">
                        
                        <!-- Card Header -->
                        <div class="card-header">
                            <div class="card-badges">
                                <span class="badge badge-online" style="width:100px; text-align: left; background: linear-gradient(135deg, #64748b, #475569);">
                                    No.
                                    <span><%= quiz.number || (index + 1) %></span>
                                </span>
                                <!-- Department Badge -->
                                <% if (quiz.roomCode) { %>
                                <span class="badge badge-language" style="background: linear-gradient(135deg, var(--warning-color), #d97706);">
                                    <i class="fas 
                                        <%= quiz.roomCode === 'hrm' ? 'fa-users' :
                                            quiz.roomCode === 'hse' ? 'fa-shield-alt' :
                                            quiz.roomCode === 'qaqs' ? 'fa-clipboard-check' :
                                            quiz.roomCode === 'sm' ? 'fa-crown' :
                                            quiz.roomCode === 'gm' ? 'fa-briefcase' :
                                            quiz.roomCode === 'fol' ? 'fa-industry' :
                                            quiz.roomCode === 'eol' ? 'fa-cogs' :
                                            quiz.roomCode === 'it' ? 'fa-laptop-code' :
                                            quiz.roomCode === 'mkt' ? 'fa-bullhorn' :
                                            quiz.roomCode === 'eng' ? 'fa-tools' :
                                            quiz.roomCode === 'wh' ? 'fa-warehouse' :
                                            quiz.roomCode === 'log' ? 'fa-shipping-fast' :
                                            quiz.roomCode === 'pnp' ? 'fa-project-diagram' :
                                            quiz.roomCode === 'acc' ? 'fa-file-invoice-dollar' :
                                            'fa-question-circle' %> me-2">
                                    </i>
                                    <%= quiz.roomCode.toUpperCase() %>
                                </span>
                                <% } %>
                            </div>
                            <div class="card-actions">
                                <div class="dropdown">
                                    <button class="action-btn" 
                                            type="button"
                                            onclick="deleteSurvey('<%= quiz._id %>')"">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h3 class="quiz-title" title="<%= quiz.title %>">
                                <%= quiz.title %>
                            </h3>
                            
                            <!-- Quiz Stats -->
                            <div class="quiz-stats">
                                <div class="stat">
                                    <i class="fas fa-users"></i>
                                    <span><%= quiz.totalCount || 0 %> <%= t('survey:participants') %></span>
                                </div>
                                <% if (quiz.scheduleSettings) { %>
                                <div class="stat">
                                    <i class="fas fa-calendar"></i>
                                    <span><%= t('survey:scheduled') %></span>
                                </div>
                                <% } %>
                                <div class="stat">
                                    <i class="fas fa-clock"></i>
                                    <span><%= quiz.estimatedDuration || '0m' %></span>
                                </div>
                            </div>

                            <!-- Card Footer -->
                            <div class="card-footer">
                                <span class="meta-item">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= t('survey:updated') %> <%= new Date(quiz.updatedAt).toLocaleDateString() %>
                                </span>
                                <div class="quiz-meta">
                                </div>
                                <div class="quick-actions">
                                    <a href="/surveys/<%= quiz._id %>/preview" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i> <br>
                                        <%= t('survey:preview') %>
                                    </a>
                                    <a href="/surveys/<%= quiz._id %>/edit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit me-1"></i> <br>
                                        <%= t('common:edit') %>
                                    </a>
                                    <a href="#" onclick="duplicateSurvey('<%= quiz._id %>')" class="btn btn-sm btn-primary">
                                        <i class="fas fa-clone me-1"></i> <br>
                                        <%= t('common:duplicate') %>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <% } %>

                <!-- No Results State -->
                <div id="noResults" class="empty-state" style="display: none;">
                    <div class="empty-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3><%= t('survey:no_surveys_found') %></h3>
                    <p><%= t('survey:try_adjusting_criteria') %></p>
                    <button class="btn btn-outline-primary" onclick="clearFilters()">
                        <i class="fas fa-filter me-2"></i>
                        <%= t('survey:clear_filters') %>
                    </button>
                </div>
                
                <!-- Pagination Section -->
                <% if (totalPages >= 1) { %>
                    <nav>
                        <ul class="pagination pagination-custom">
                            <!-- Previous Button -->
                            <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.prevPage %>">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            <% } %>
                            
                            <!-- Page Numbers -->
                            <% pagination.pages.forEach(page => { %>
                            <li class="page-item <%= page === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= page %>"><%= page %></a>
                            </li>
                            <% }); %>
                            
                            <!-- Next Button -->
                            <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.nextPage %>">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Create Test Modal -->
    <div class="modal fade" id="createTestModal" tabindex="-1" aria-labelledby="createTestModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); color: white;">
                    <h5 class="modal-title" id="createTestModalLabel">
                        <i class="fas fa-rocket me-2"></i><%= t('publicsurvey:create_new_publicsurvey_session') %>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="<%= t('common:close') %>"></button>
                </div>
                <div class="modal-body">
                    <form id="createTestForm">
                        <!-- Quiz Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary mb-3">
                                            <i class="fas fa-list-ol me-2"></i><%= t('publicsurvey:survey_selection') %>
                                        </h6>
                                        <div class="form-floating">
                                            <input type="number" 
                                                class="form-control" 
                                                id="quizNumber" 
                                                name="quizNumber" 
                                                placeholder="<%= t('publicsurvey:survey_number') %>"
                                                min="1"
                                                required>
                                            <label for="quizNumber"><%= t('publicsurvey:survey_number') %></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Test Mode -->

                            <!-- Schedule Settings (for Offline mode) -->
                            <div class="row mb-4" id="scheduleSettings">
                                <div class="col-12">
                                    <div class="card border-warning bg-warning bg-opacity-10">
                                        <div class="card-body">
                                            <h6 class="card-title text-warning mb-3">
                                                <i class="fas fa-calendar-alt me-2"></i><%= t('publicsurvey:schedule_settings') %>
                                            </h6>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3">
                                                        <input type="datetime-local" 
                                                            class="form-control" 
                                                            id="startTime" 
                                                            name="startTime">
                                                        <label for="startTime"><%= t('publicsurvey:start_time') %></label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3">
                                                        <input type="datetime-local" 
                                                            class="form-control" 
                                                            id="endTime" 
                                                            name="endTime">
                                                        <label for="endTime"><%= t('publicsurvey:end_time') %></label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Max Participants -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="text-primary mb-3">
                                        <i class="fas fa-users me-2"></i><%= t('publicsurvey:participant_limit') %>
                                    </h6>
                                    <div class="form-floating">
                                        <input type="number" 
                                            class="form-control" 
                                            id="maxParticipants" 
                                            name="maxParticipants" 
                                            placeholder="<%= t('publicsurvey:max_participants') %>"
                                            min="1"
                                            max="1000"
                                            value="50"
                                            required>
                                        <label for="maxParticipants"><%= t('publicsurvey:max_participants') %></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i><%= t('common:cancel') %>
                    </button>
                    <button type="submit" form="createTestForm" class="btn btn-primary" id="createTestBtn">
                        <i class="fas fa-rocket me-2"></i><%= t('publicsurvey:create_publicsurvey') %>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Created Success Modal -->
    <div class="modal fade" id="testCreatedModal" tabindex="-1" aria-labelledby="testCreatedModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="testCreatedModalLabel">
                        <i class="fas fa-check-circle me-2"></i><%= t('publicsurvey:publicsurvey_created_successfully') %>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="<%= t('common:close') %>"></button>
                </div>
                <div class="modal-body" id="testCreatedContent">
                    <!-- Content will be populated by JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common:close') %></button>
                    <button type="button" class="btn btn-primary" id="startTestBtn" style="display: none;">
                        <i class="fas fa-play me-2"></i><%= t('publicsurvey:start_publicsurvey_now') %>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="footer-text">
                        <i class="fas fa-brain me-2"></i>
                        <%= t('common:app_name') %> © <%= new Date().getFullYear() %> <%= t('survey:all_rights_reserved') %>
                        <% if (typeof roomInfo !== 'undefined' && roomInfo) { %>
                        <small class="text-muted ms-2">
                            | <%= roomInfo.name %> <%= t('survey:department') %>
                        </small>
                        <% } %>
                    </span>
                </div>
                <div class="col-md-6">
                    <div class="footer-links">
                        <a href="/about"><%= t('survey:about') %></a>
                        <a href="/privacy"><%= t('survey:privacy') %></a>
                        <a href="/terms"><%= t('survey:terms') %></a>
